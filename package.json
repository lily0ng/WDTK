{
  "name": "webdevkit",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n web,desktop \"npm run dev -w webdevkit-web\" \"npm run dev -w webdevkit-desktop\"",
    "dev:web": "npm run dev -w webdevkit-web",
    "dev:desktop": "npm run dev -w webdevkit-desktop",
    "dev:cli": "node apps/cli/bin/webdevkit.js --help"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "wait-on": "^8.0.0"
  }
}
